<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        style="@style/ContentStyle"
        android:text="您的手机防盗卫士" />

    <TextView
        style="@style/ContentStyle"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="sim卡变更报警" />

    <TextView
            android:id="@+id/text_gps"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="GPS追踪" />

    <TextView
            android:id="@+id/text_music"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="播放报警音乐" />

    <TextView
            android:id="@+id/text_wipe"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程删除数据" />

    <TextView
            android:id="@+id/text_lock"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程锁屏" />

    <TextView
            android:id="@+id/text_photo"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程拍照" />

    <TextView
            android:id="@+id/text_voice"
            style="@style/ContentStyle"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程录音" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_next_page"
            style="@style/NextPageStyle"/>

    </RelativeLayout>

</LinearLayout>