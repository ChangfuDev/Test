<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="logout_app_text">
        <item name="android:layout_height">45dip</item>
        <item name="android:background">@drawable/button_app_bg</item>
        <item name="android:ems">20</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:padding">10dip</item>
    </style>

    <!-- 下一步样式 -->
    <style name="NextPageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_btn_common</item>
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">下一步</item>
    </style>

    <!-- 上一步样式 -->
    <style name="PreviousPageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/selector_btn_common</item>
        <item name="android:drawableLeft">@mipmap/previous</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">上一步</item>
    </style>

    <!-- 文本样式 -->
    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
